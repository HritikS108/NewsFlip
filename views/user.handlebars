{{!-- here we have to select preferred sources and press Update button  --}}
{{!-- then this will redirect us to  localhost:300/alex/feed --}} 
{{!-- and show news --}}

<script>
    $("#nav-feed").removeClass("active");
    $("#nav-sessions").removeClass("active");
    $("#nav-profile").addClass("active");
</script>
<div class="container profile">
    
    <form id="update-form" method="post" action="/{{user.username}}/">
        <div class="form-group row">
            <div class="input-group col-md-6">
                <label for="firstName" class="col-md-4">First Name</label>
                <input id="firstName" class="form-control" type="text" name="firstName"
                       placeholder="First Name" value={{user.firstName}} disabled>
            </div>

            <div class="input-group col-md-6">
                <label for="lastName" class="col-md-4">Last Name</label>
                <input id="lastName" class="form-control" type="text" name="lastName"
                       placeholder="Last Name" value={{user.lastName}} disabled>
            </div>
        </div>

        <div class="form-group row">
            <div class="input-group col-md-6">
                <label for="username" class="col-md-4">Username</label>
                <input id="username" class="form-control" type="text" name="username"
                       placeholder="Username" value={{user.username}} disabled>
            </div>

            <div class="input-group col-md-6">
                <label for="email" class="col-md-4">Email</label>
                <input id="email" class="form-control" type="text" name="email"
                       placeholder="Email" value={{user.email}} disabled>
            </div>
        </div>

        <script>
            const sourcesSelected = {{{sourcesSelected}}};
            $(document).ready(function () {
                $('#sources').select2({
                    initSelection: function (element, callback) {
                        callback(sourcesSelected);
                    },
                });
            });
        </script>

        <div class="form-group row">
            <div class="input-group col-md-12">
                <label for="sources" class="col-md-2">Sources</label>
                <select id="sources" class="sources col-md-10" multiple="multiple" name="sources">
                    {{!-- all available source list is provided --}}
                    {{#each sources}}
                        <option value={{this.id}}>{{this.text}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <button id="signup-button" class="btn btn-success" type="submit">Update</button>
        </div>
    </form>
</div>